<h2 class="clipboard_title">clipboard</h2>
<div class="clear_clipboard">
    <%= form_with url: clear_clipboard_path(current_user), method: 'delete' do %>
        <%= submit_tag("clear clipboard") %>
    <% end %>
</div>
<% @clipboard.clipboard_topics.each do |topic| %>
    <h2><%= topic.name %></h2>
    <div class="row">
    <% @clipboard.clipboard_topic_quotes(topic).each do |quote| %>
        <div class="column">
            <p><%= quote.text %></p>
            <%= link_to "source", quote.source_url, class: "source" %>
            <%= link_to "see quote", quote_path(quote), class: "see_quote" %>
        </div>
    <% end %>
    </div>
<% end %>