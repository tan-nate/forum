<% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
<% end %>
<br>
<div class="login">
    <%= form_for :user, url: '/users' do |f| %>
        Username: <%= f.text_field :username %><br><br>
        Password: <%= f.password_field :password %>
        <%= f.submit "Submit" %>
    <% end %>
</div>