<% if @quote.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@quote.errors.count, "error") %>
      prohibited this quote from being saved:
    </h2>
 
    <ul>
    <% @quote.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @quote, class: "new_quote" do |f| %>
    <%= f.hidden_field :topic_id  %>
    <%= f.text_area :text, placeholder: "quote text:" %><br>
    <%= f.text_field :source_url, placeholder: "source url:" %><br>
    <%= f.submit "create quote" %>
<% end %>